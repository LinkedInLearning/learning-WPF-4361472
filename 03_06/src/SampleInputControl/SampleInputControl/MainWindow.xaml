<Window x:Class="SampleInputControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleInputControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Labelは文字列以外を含めることができます" HorizontalAlignment="Left"  VerticalAlignment="Top"/>

        <Label>
            <Image Width="40" Height="40" Source="/001.png" />
        </Label>

        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBox&#10;は文字列装飾ができます" VerticalAlignment="Top" TextDecorations="Underline"/>

        <TextBox Margin="0,30,0,0">文字を入力できます</TextBox>

        <TextBlock Margin="0,30,0,0">PasswordBoxは入力した文字が見えません</TextBlock>
        <PasswordBox></PasswordBox>

        <TextBlock Margin="0,30,0,0">灰色の部分にはマウスで線を書くことができます</TextBlock>
        <InkCanvas Background="#FFEAEAEA" EditingMode="Ink"></InkCanvas>
    </StackPanel>
</Window>
