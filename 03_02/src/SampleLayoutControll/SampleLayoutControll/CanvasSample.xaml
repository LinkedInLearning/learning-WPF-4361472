<Page x:Class="SampleLayoutControl.CanvasSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SampleLayoutControl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CanvasSample">

    <Canvas>
        <Rectangle Canvas.Left="100" Canvas.Top="0" Width="200" Height="300" Fill="Red"/>
        <Rectangle Canvas.Left="150" Canvas.Top="50"  Width="200" Height="300" Fill="Blue"/>
        <Rectangle Canvas.Left="200" Canvas.Top="100"  Width="200" Height="300" Fill="Green"/>
        <Button Content="Stack Panel" Canvas.Left="443" Canvas.Top="43" Height="40" Width="87" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click"/>
    </Canvas>
</Page>
